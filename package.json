{
  "name": "super-intelligence-app",
  "version": "1.0.0",
  "description": "Local server for Firebase Hosting",
  "main": "index.js",
  "scripts": {
    "start": "firebase emulators:start",
    "sync-agents": "node scripts/syncAgentsConfig.js",
    "test": "npm run sync-agents && node scripts/validateAgentMetadata.js && npm --prefix functions test --silent",
    "dev": "concurrently \"npm start --prefix frontend\" \"firebase emulators:start\""
    ,
    "build:frontend": "npm run build --prefix frontend",
    "build:functions": "npm --prefix functions install",
    "build": "npm run build:functions && npm run build:frontend",
    "deploy": "npm run build && firebase deploy",
    "preview": "npm run build && firebase hosting:channel:deploy preview"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "firebase": "^9.6.10",
    "firebase-admin": "^11.0.0",
    "firebase-functions": "^3.24.1",
    "jsdom": "^26.1.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
