{
  "name": "super-intelligence-app",
  "version": "1.0.0",
  "description": "Local server for Firebase Hosting",
  "main": "index.js",
  "scripts": {
    "start": "firebase emulators:start",
    "sync-agents": "node scripts/syncAgentsConfig.js",
    "validate-metadata": "node scripts/checkDevDeps.js && node scripts/validateAgentMetadata.js",
    "test": "if [ \"$TEST\" = \"false\" ]; then echo 'Skipping tests'; else node scripts/checkDevDeps.js && npm run sync-agents && node scripts/validateAgentMetadata.js && npm --prefix functions test --silent; fi",
    "dev": "npm --prefix frontend run dev",
    "build": "npm --prefix frontend run build",
    "deploy": "firebase deploy --only hosting",
    "deploy:preview": "firebase hosting:channel:deploy preview",
    "deploy:all": "npm run build && firebase deploy",
    "deploy:preview:all": "npm run build && firebase hosting:channel:deploy preview"
  },
  "engines": {
    "node": ">=18.0.0 <=20.x"
  },
  "dependencies": {
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "firebase": "^11.10.0",
    "firebase-admin": "^11.0.0",
    "firebase-functions": "^3.24.1",
    "jsdom": "^26.1.0",
    "ws": "^8.13.0"
  },
  "overrides": {
    "protobufjs": "^7.2.4"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "concurrently": "^9.2.0",
    "firebase-tools": "^13.0.0",
    "js-yaml": "^4.1.0"
  },
  "ajvComment": "Required for validating agent metadata and tests"
}
